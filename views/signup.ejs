</head>

<body>
        <%- include('./header'); %>
                <%- include('./error_messages'); %>
                        <div class="container text-center">
                                <div class="col-md-3"></div>
                                <div class="col-md-6">
                                        <form action="/signup" method="post">
                                                <label for="formGroupExampleInput" class="form-label">ユーザ名</label>
                                                <input required type="text" class="form-control" name="username"
                                                        id="formGroupExampleInput" placeholder="username">
                                                <!-- <div class="col-md-6"> -->
                                                <label for="formGroupExampleInput2" class="form-label">パスワード</label>
                                                <input required type="password" class="form-control" name="password"
                                                        id="formGroupExampleInput2" placeholder="password">
                                                <!-- </div> -->
                                                <label for="formGroupExampleInput2" class="form-label">パスワード再入力</label>
                                                <input required type="password" class="form-control" name="repassword"
                                                        id="formGroupExampleInput2" placeholder="repassword">
                                                <input required class="btn btn-warning" type="submit"
                                                        value="★Sign up★" />
                                        </form>
                                </div>
                                <div class="col-md-3"></div>
                        </div>

                        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                                integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
